<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context="kz.production.kuanysh.tarelka.ui.fragments.social.SocialMediaDirectFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Персональная консультация"
                android:textColor="@android:color/white"
                android:textSize="@dimen/toolbarTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.403"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.515" />

            <ImageView
                android:id="@+id/social_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/glyph_back_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/whatsapp"
            android:padding="7dp"
            android:layout_weight="1.5"/>
        <TextView
            android:id="@+id/via_whatsapp"
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/carbon_black"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Whatsapp" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/telegram"
            android:padding="7dp"
            android:layout_weight="1.5"/>
        <TextView
            android:id="@+id/via_telegram"
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/carbon_black"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Telegram" />

    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/vk"
            android:padding="7dp"
            android:layout_weight="1.5"/>
        <TextView
            android:id="@+id/via_vk"
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/carbon_black"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Vk" />

    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/facebook"
            android:padding="7dp"
            android:layout_weight="1.5"/>
        <TextView
            android:id="@+id/via_facebook"
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/carbon_black"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Facebook" />

    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/viber"
            android:padding="7dp"
            android:layout_weight="1.5"/>
        <TextView
            android:id="@+id/via_viber"
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/carbon_black"
            android:textSize="18sp"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Viber" />

    </LinearLayout>

</LinearLayout>
